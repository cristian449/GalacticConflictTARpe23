@model InterGalacticConflict.Models.Ships.ShipDeleteViewModel

<h1> @Html.DisplayFor(model => model.ShipName) </h1>
<div>
    <h4> My lord, thyne Titan, be in a state of DESPAIR: </h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>
        <div class="form-group row">
            <label asp-for="ShipName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipName)
        </div>
        <div id="imagediv">
            @foreach (var image in Model.Image)
            {
                <partial name="_Images" model="image" />
            }
        </div>
        <div class="form-group row">
            <label asp-for="ShipHP" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipHP)
        </div>
        <div class="form-group row">
            <label asp-for="ShipExperience" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipExperience)
        </div>
        <div class="form-group row">
            <label asp-for="ShipExperience" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipExperience)
        </div>
        <div class="form-group row">
            <label asp-for="ShipClass" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipClass)
        </div>
        <div class="form-group row">
            <label asp-for="ShipStatus" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ShipStatus)
        </div>
        <div class="form-group row">
            <label asp-for="Turbolaser" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Turbolaser)
            <label asp-for="TurbolaserPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TurbolaserPower)
        </div>
        <div class="form-group row">
            <label asp-for="Missile" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Missile)
            <label asp-for="MissilePower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.MissilePower)
        </div>
        <div class="form-group row">
            <label asp-for="Torpedo" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Torpedo)
            <label asp-for="TorpedoPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TorpedoPower)
        </div>
        <div class="form-group row">
            <label asp-for="Light_Laser" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Light_Laser)
            <label asp-for="Light_LaserPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Light_LaserPower)
        </div>
        <div class="form-group row">
            <label asp-for="Heavy_Laser" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Heavy_Laser)
            <label asp-for="Heavy_LaserPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Heavy_LaserPower)
        </div>
        <div class="form-group row">
            <label asp-for="Ballistic" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Ballistic)
            <label asp-for="BallisticPower" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.BallisticPower)
        </div>
    </dl>
    <form asp-action="DeleteConfirmation">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="titans" class="btn btn-secondary">Index</a>
    </form>
</div>